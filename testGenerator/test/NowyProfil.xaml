<Window x:Class="test.NowyProfil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="Nowy Profil" Height="300" Width="470" MinHeight="260" MinWidth="460" MaxHeight="500" MaxWidth="1000" Background="black" WindowStartupLocation="CenterScreen">
	<Window.Resources>
		<Style TargetType="Button">
			<Setter Property="FontSize" Value="13"/>
			<Setter Property="BorderBrush" Value="#a4a4a4" />
			<Setter Property="Background" Value="#13BEEB" />
			<Setter Property="FontFamily" Value="Maiandra GD" />
		</Style>
		<Style TargetType="ToggleButton">
			<Setter Property="FontSize" Value="18"/>
			<Setter Property="BorderBrush" Value="#a4a4a4" />
			<Setter Property="Background" Value="#13BEEB" />
			<Setter Property="FontFamily" Value="Maiandra GD" />
		</Style>
		<Style TargetType="CheckBox">
			<Setter Property="FontSize" Value="13"/>
			<Setter Property="FontFamily" Value="Maiandra GD"/>
			<Setter Property="Foreground" Value="#a4a4a4"/>
		</Style>
		<Style TargetType="MenuItem">
			<Setter Property="FontFamily" Value="Maiandra GD" />
		</Style>
		<Style TargetType="Label">
			<Setter Property="FontSize" Value="13"/>
			<Setter Property="FontFamily" Value="Maiandra GD"/>
			<Setter Property="Foreground" Value="#a4a4a4"/>
		</Style>
		<Style TargetType="TextBox">
			<Setter Property="Background" Value="black"/>
			<Setter Property="FontFamily" Value="Maiandra GD" />
			<Setter Property="BorderBrush" Value="#13BEEB"/>
			<Setter Property="Foreground" Value="#13BEEB"/>
		</Style>
		<Style TargetType="TextBlock">
			<Setter Property="FontFamily" Value="Maiandra GD" />
		</Style>
		<Style TargetType="PasswordBox">
			<Setter Property="Background" Value="Black"/>
			<Setter Property="Foreground" Value="#13BEEB"/>
			<Setter Property="BorderBrush" Value="#13BEEB"/>
		</Style>
	</Window.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="50*"></ColumnDefinition>
			<ColumnDefinition Width="350*" MinWidth="350"></ColumnDefinition>
			<ColumnDefinition Width="50*"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="60"></RowDefinition>
			<RowDefinition Height="10*" MinHeight="160"></RowDefinition>
			<RowDefinition Height="0*"></RowDefinition>
		</Grid.RowDefinitions>
		<StackPanel Grid.Column="1">
			<Label Content="TestGenerator" HorizontalAlignment="Center" VerticalAlignment="Top" Height="72" FontSize="48" HorizontalContentAlignment="Center" FontFamily="Maiandra GD" Margin="10,0,10,10"/>
		</StackPanel>
		<StackPanel Grid.Column="1" Grid.Row="1">
			<WrapPanel>
				<Label Content="login:" Padding="5" Margin="10" Width="100" HorizontalContentAlignment="Right" FontWeight="Bold"/>
				<TextBox x:Name="TextNLogin" Padding="5" Margin="0,10,10,10" MinWidth="150"/>
			</WrapPanel>
			<WrapPanel>
				<Label Content="hasło:" Padding="5" Margin="10" Width="100" HorizontalContentAlignment="Right" FontWeight="Bold"/>
				<PasswordBox x:Name="NewPassword" Padding="5" Margin="0,10,10,10" MinWidth="150"/>
			</WrapPanel>
			<WrapPanel>
				<Label Content="powtórz hasło:" Padding="5" Margin="10" Width="100" HorizontalContentAlignment="Right" FontWeight="Bold"/>
				<PasswordBox x:Name="NewPassword2" Padding="5" Margin="0,10,10,10" MinWidth="150"/>
			</WrapPanel>
			<Label x:Name="KomNP" Content="" Padding="1" Margin="10,0,10,0" HorizontalAlignment="Center" FontSize="8" Foreground="#FFF90000"/>
			<Button x:Name="buttonStworzKonto" Content="stwórz konto" Padding="5" HorizontalAlignment="Right" Margin="0,0,10,0"  Click="buttonStworzKonto_Click" FontWeight="Bold"/>
		</StackPanel>
	</Grid>
</Window>
